        </activity>

        <activity android:name=".activities.LockScreenActivity"
            android:label="@string/lockscreen_title"/>

        <service android:name=".applink.AppLinkService" />
        
        <receiver android:name=".receiver.PanicoReceiver" />
    </application>

</manifest>
